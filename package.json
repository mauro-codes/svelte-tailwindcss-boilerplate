{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:tailwindcss && rollup -c",
    "dev": "npm run build:tailwindcss && rollup -c -w",
    "start": "sirv public",
    "build:tailwindcss": "SET NODE_ENV=production && npx tailwindcss-cli@latest build ./src/styles/tailwind.css -o ./public/build/tailwind.css"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "autoprefixer": "^10.2.4",
    "postcss-nesting": "^7.0.1",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^4.6.5",
    "tailwindcss": "^2.0.2"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  }
}
